# assignment-D1
#include <stdio.h>

int main()
{
    int num, reverse = 0, digit;

    printf("Enter a number: ");
    scanf("%d", &num);

    for (int i = num; i != 0; i /= 10)
    {
        digit = i % 10;
        reverse = (reverse * 10) + digit;
    }

    printf("Reverse of the number: %d", reverse);

    return 0;
